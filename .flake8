[flake8]
# Flake8 Configuration

max-line-length = 127
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,

# Ignore specific errors
extend-ignore =
    E203
    E266
    E501
    W503
    W504

# Complexity
max-complexity = 10

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811

# Enable warnings
enable-extensions = G

# Statistics
statistics = True
count = True
